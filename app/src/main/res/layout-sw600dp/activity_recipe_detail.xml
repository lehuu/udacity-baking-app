<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ui.RecipeDetailActivity">

    <fragment
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.5"
        android:layout_height="match_parent"
        android:id="@+id/fragment_step_list"
        android:name="com.bytecruncher.backacity.ui.StepListFragment"/>

    <fragment
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/fragment_step_list"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.5"
        android:layout_height="match_parent"
        android:id="@+id/fragment_step_detail"
        android:name="com.bytecruncher.backacity.ui.StepDetailFragment"/>

</androidx.constraintlayout.widget.ConstraintLayout>